{
    "preset": "airbnb",

    "validateIndentation": 4,
    "safeContextKeyword": "self",
    "requirePaddingNewLinesBeforeLineComments": false,
    "validateLineBreaks": false,
    "requireTrailingComma": false,
    "maximumLineLength": {
        "value": 100,
        "allExcept": [
            "regex", 
            "comments"
        ]
    },

    "disallowIdenticalDestructuringNames": true,
    "disallowSpacesInsideTemplateStringPlaceholders": true,
    "disallowVar": true,
    "requireArrayDestructuring": true,
    "requireArrowFunctions": true,
    "requireEnhancedObjectLiterals": true,
    "requireObjectDestructuring": true,
    "requireShorthandArrowFunctions": true,
    "requireSpaceBeforeDestructuredValues": true,
    "requireSpread": true,
    "requireTemplateStrings": true,

    "plugins": [
        "jscs-jsdoc"
    ],

    "jsDoc": {
        "checkAnnotations": {
            "preset": "jsdoc3",
            "extra": {}
        },
        "enforceExistence": {
            "allExcept": ["expressions", "exports", "arrow"]
        },

        "checkParamExistence": true,
        "checkParamNames": true,
        "requireParamTypes": true,
        "checkRedundantParams": true,
        "requireHyphenBeforeDescription": true,

        "requireReturnTypes": true,
        "checkReturnTypes": true,
        "checkRedundantReturns": true,

        "requireNewlineAfterDescription": true,
        "checkTypes": "capitalizedNativeCase"
    }
}